<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoFar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/saludo"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="600dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/saludo"
        android:textColor="@color/colorPrincipal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_farmacias"
        android:layout_width="409dp"
        android:layout_height="400dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saludo"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/farmacias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/farmacias"
        android:textColor="@color/colorPrincipal"
        app:layout_constraintBottom_toTopOf="@+id/lv_farmacias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saludo"
        app:layout_constraintVertical_bias="0.552" />

    <Button
        android:id="@+id/btn_crear_farmacia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrincipal"
        android:text="@string/strCrearFarmacia"
        android:textColor="@color/colorTexSecundario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_farmacias" />

</androidx.constraintlayout.widget.ConstraintLayout>